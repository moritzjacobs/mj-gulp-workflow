{
	"name": "mj-gulp-workflow",
	"version": "2.1.3",
	"repository": "https://github.com/moritzjacobs/mj-gulp-workflow",
	"description": "A fork of https://github.com/zephir/zephir-gulp-workflow with added sourcemaps and other things.",
	"main": "dist/index.js",
	"scripts": {
		"esw": "esw --fix -w",
		"cli": "npm run start",
		"dev": "cd ./test; gulp",
		"dist": "cd ./test; gulp dist --env dist",
		"pretest": "npm run babel-dist; npm run clean; npm run watchtest; cd ./test; gulp test --env dist",
		"test": "jest",
		"pretest-txt": "npm run babel-dist; npm run clean; npm run watchtest; cd ./test; gulp testTxt --env dist",
		"test-txt": "npm run jest --runTestsByPath txt.test.js",
		"pretest-img": "cd ./test; gulp testImg --env dist",
		"test-img": "npm run jest --runTestsByPath img.test.js",
		"jest": "jest",
		"clean": "rm -rf ./test/output",
		"testd": "http-server ./test -o",
		"babel-dist": "babel src -d dist",
		"start": "babel-node src --presets=env",
		"watchtest": "./test/watchtest.sh"
	},
	"jest": {
		"verbose": true,
		"testURL": "http://localhost/"
	},
	"contributors": [
		"Marc Stampfli <marc.stampfli@zephir.ch> (http://zephir.ch)",
		"Moritz Jacobs <mail@moritzjacobs.de> (https://moritzjacobs.de)"
	],
	"license": "ISC",
	"dependencies": {
		"@babel/core": "^7.8.7",
		"@babel/preset-env": "^7.8.7",
		"app-root-dir": "^1.0.2",
		"autoprefixer": "^9.7.4",
		"cli-real-favicon": "0.0.8",
		"del": "^5.1.0",
		"fancy-log": "^1.3.3",
		"glob": "^7.1.6",
		"gulp": "^4.0.2",
		"gulp-babel": "^8.0.0",
		"gulp-bro": "^1.0.3",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-imagemin": "^6.2.0",
		"gulp-notify": "^3.2.0",
		"gulp-postcss": "^8.0.0",
		"gulp-sass": "^4.0.2",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-svgmin": "^2.2.0",
		"gulp-touch-cmd": "0.0.1",
		"http-server": "^0.12.1",
		"imagemin-pngquant": "^8.0.0",
		"junk": "^3.1.0",
		"merge-stream": "^2.0.0",
		"natives": "^1.1.6",
		"rfg-api": "^0.5.1",
		"uniqid": "^5.2.0",
		"yargs": "^14.2.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.8.4",
		"@babel/node": "^7.8.7",
		"babel-core": "^7.0.0-bridge.0",
		"eslint": "^6.8.0",
		"eslint-config-standard": "^14.1.0",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-jest": "^22.21.0",
		"eslint-plugin-node": "^10.0.0",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^4.0.1",
		"eslint-watch": "^6.0.1",
		"jest": "^25.1.0"
	}
}
